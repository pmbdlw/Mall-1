<button id="clearCookie">清除Cookie</button>
<script>

    $('#clearCookie').click(function () {
        //clearCookie();
        var user = $.cookie('Mall-User') || '';
        $.post('./debug/Logout', {}, function (result) {
            if (result.success) {
                $.removeCookie('Mall-User', { path: '/' });
                $.removeCookie('Mall-SellerManager', { path: "/" });

                alert('清除完成');
            }
            else
                alert('没有可清除的数据');
        });
    });


    function clearCookie(){ 
        var keys = document.cookie.match(/[^ =;]+(?=\=)/g);
        if (keys) {
            for (var i = keys.length; i--;) {
                $.cookie(keys[i], null, { path: "/" });
            }
        }
    } 
</script>