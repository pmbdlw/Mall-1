                                @if (!string.IsNullOrEmpty(product.size))
                                {
                                    <label>@product.SizeAlias：@(new HtmlString(product.size)) &nbsp;&nbsp;</label>
                                }
                                @if (!string.IsNullOrEmpty(product.color))
                                {
                                    <label>@product.ColorAlias：@(new HtmlString(product.color)) &nbsp;&nbsp;</label>
                                }
                                @if (!string.IsNullOrEmpty(product.version))
                                {
                                    <label>@product.VersionAlias：@(new HtmlString(product.version))</label>
                                }
                            </p>
                            <p class="gray text-right">x @product.count</p>
                        </h5>
                    </div>
                </div>
            }
            @if (productType == 0)
            {
