@{
    ViewBag.Title = "订单提交";
    var model = (Mall.DTO.MobileOrderDetailConfirmModel)ViewBag.ConfirmModel;
    var products = model.products;
    //var products = (IEnumerable<Mall.DTO.MobileShopCartItemModel>)ViewBag.ConfirmModel.products;
    var canIntegralPerMoney = (bool?)ViewBag.CanIntegralPerMoney;
    var canCapital = (bool)ViewBag.CanCapital;
    var productType = Mall.Core.Helper.TypeHelper.ObjectToInt(ViewBag.productType);
    var shipperAddress = (string)ViewBag.ShipperAddress;
    var shipperTelPhone = (string)ViewBag.ShipperTelPhone;
}

<input id="icod" type="hidden" value="@ViewBag.IsCashOnDelivery.ToString()" />
<input id="total" type="hidden" value="@ViewBag.ConfirmModel.orderAmount" />
<link rel="stylesheet" type="text/css" href="~/Areas/Mobile/Templates/Default/Content/mui.min.css" />
<link rel="stylesheet" type="text/css" href="~/Areas/Mobile/Templates/Default/Content/mui.picker.css" />
<link rel="stylesheet" type="text/css" href="~/Areas/Mobile/Templates/Default/Content/mui.poppicker.css" />
<div class="container submit-cart">
    @{
        var defaultAddress = ViewBag.address as Mall.Entities.ShippingAddressInfo;
    }
    @if (productType == 0)
    {
        if (defaultAddress != null)
        {
            var addDetail = defaultAddress.AddressDetail ?? "";
            <a href="@Url.Action("ChooseShippingAddress", "Order", new { area = "mobile" })?isOrder=1&returnUrl=@HttpUtility.UrlEncode(Context.Request.GetDisplayUrl())" class="street-well" id="choiceAddr">
                <p id="selectedAddress">@defaultAddress.ShipTo <i class="glyphicon glyphicon-menu-right"></i><span>@defaultAddress.Phone</span></p>
                <p class="address">@defaultAddress.RegionFullName &nbsp;@defaultAddress.Address&nbsp;@defaultAddress.AddressDetail</p>
                <i class="icon"></i>
            </a>
        }
        else
        {
            <a class="street-well" id="choiceAddr" href="@Url.Action("ChooseShippingAddress", "Order", new { area = "mobile" })?isOrder=1&returnUrl=@HttpUtility.UrlEncode(Context.Request.GetDisplayUrl())">
                <p>您还没有填写或更新收货地址<spa style="color:red">重新选择</spa></p>
            </a>
        }
    }

    @{
        var zyShop = products.Where(p => p.shopId == 1).FirstOrDefault();
        var otherShops = products.Where(p => p.shopId != 1).ToList();
    }
    @if (ViewBag.IsCashOnDelivery && zyShop != null && zyShop.CartItemModels.Count > 0)
    {
        <div id="payment_m" class="payment_m">
            <span>支付方式</span>
            <i class="glyphicon glyphicon-menu-right"></i>
            <span class="payment-c"><a href="javascript:void(0)">在线支付 </a></span>
        </div>
    }
    else
    {
        <div id="payment_m">
            <span>支付方式</span>
            <span class="payment-c"><a href="javascript:void(0)">在线支付</a></span>
        </div>
    }
    @if (productType == 1 && !string.IsNullOrWhiteSpace(shipperAddress) && !string.IsNullOrWhiteSpace(shipperTelPhone))
    {
        <div class="goods-info mb10">
            <div class="item">
                <div class="detail-anchor">联系电话<span class="pull-right">@shipperTelPhone</span></div>
            </div>
            <div class="item">
                <div class="detail-anchor" style="height: auto;padding: 10px 0;line-height: 22px;display: flex;justify-content: space-between;">
                	<span style="flex-shrink: 0">核销地址</span>
                	<span style="flex-shrink: 1;width:100%;text-align:right;margin: 0 10px;">@shipperAddress</span>
                </div>
            </div>
        </div>
    }

    @foreach (var shop in products)
    {
        <div class="goods-info mb10" id="@shop.shopId" shopid="@shop.shopId">
            @if (shop.VshopId != 0)
            {
                <div class="item">
                    <a href="/@(ViewBag.AreaName)/vshop/detail/@shop.VshopId">
                        <div class="goods-shop">
                            @shop.ShopName
                            <i class="glyphicon glyphicon-menu-right"></i>
                        </div>
                    </a>
                </div>
            }
            else
            {
                <a>

                    <div class="item">
                        <div class="goods-shop">
                            @shop.ShopName
                        </div>
                    </div>
                </a>
            }

            @foreach (var product in shop.CartItemModels)
            {
                <div class="item" pid="@product.id" skuid="@product.skuId" count="@product.count" price="@product.price">
